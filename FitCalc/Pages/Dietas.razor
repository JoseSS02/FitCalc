        <tr>
          <td>@dia.DiaName</td>
          <td>@dia.DesayunoDesc</td>
          <td>@dia.AlmuerzoDesc</td>
          <td>@dia.MeriendaDesc</td>
          <td>@dia.CenaDesc</td>
          <td>@dia.TotalKcal</td>
        </tr>
      }
    </tbody>
  </table>
</div>

